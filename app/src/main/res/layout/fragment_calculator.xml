<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/calc_screen_bg"
    tools:context=".ui.CalculatorFragment">

    <GridLayout
        android:id="@+id/gl_cal_ui"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:columnCount="4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_cal_display">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/bt_cal_num_1"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:tag="1"
            android:text="1"
            android:textAlignment="center"
            android:textColor="@color/calc_bt_txt_cl"
            android:textSize="@dimen/cal_bt_text_size"
            app:backgroundTint="@color/calc_bt_bg_num_tint"
            app:cornerRadius="@dimen/cal_bt_rad" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/bt_cal_num_2"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:text="2"
            android:tag="2"
            android:textAlignment="center"
            android:textColor="@color/calc_bt_txt_cl"
            android:textSize="@dimen/cal_bt_text_size"
            app:backgroundTint="@color/calc_bt_bg_num_tint"
            app:cornerRadius="@dimen/cal_bt_rad" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/bt_cal_num_3"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:text="3"
            android:tag="3"
            android:textAlignment="center"
            android:textColor="@color/calc_bt_txt_cl"
            android:textSize="@dimen/cal_bt_text_size"
            app:backgroundTint="@color/calc_bt_bg_num_tint"
            app:cornerRadius="@dimen/cal_bt_rad" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/bt_cal_op_pl"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:tag="+"
            android:text="+"
            android:textAlignment="center"
            android:textSize="@dimen/cal_bt_ops_size"
            app:backgroundTint="@color/calc_bt_bg_op_tint"
            app:cornerRadius="@dimen/cal_bt_rad" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/bt_cal_num_4"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:tag="4"
            android:text="4"
            android:textAlignment="center"
            android:textColor="@color/calc_bt_txt_cl"
            android:textSize="@dimen/cal_bt_text_size"
            app:backgroundTint="@color/calc_bt_bg_num_tint"
            app:cornerRadius="@dimen/cal_bt_rad" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/bt_cal_num_5"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:tag="5"
            android:text="5"
            android:textAlignment="center"
            android:textColor="@color/calc_bt_txt_cl"
            android:textSize="@dimen/cal_bt_text_size"
            app:backgroundTint="@color/calc_bt_bg_num_tint"
            app:cornerRadius="@dimen/cal_bt_rad" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/bt_cal_num_6"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:tag="6"
            android:text="6"
            android:textAlignment="center"
            android:textColor="@color/calc_bt_txt_cl"
            android:textSize="@dimen/cal_bt_text_size"
            app:backgroundTint="@color/calc_bt_bg_num_tint"
            app:cornerRadius="@dimen/cal_bt_rad" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/bt_cal_op_ms"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:tag="-"
            android:text="-"
            android:textAlignment="center"
            android:textSize="@dimen/cal_bt_ops_size"
            app:backgroundTint="@color/calc_bt_bg_op_tint"
            app:cornerRadius="@dimen/cal_bt_rad" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/bt_cal_num_7"
            android:layout_row="2"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:tag="7"
            android:text="7"
            android:textAlignment="center"
            android:textColor="@color/calc_bt_txt_cl"
            android:textSize="@dimen/cal_bt_text_size"
            app:backgroundTint="@color/calc_bt_bg_num_tint"
            app:cornerRadius="@dimen/cal_bt_rad" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/bt_cal_num_8"
            android:layout_row="2"
            android:layout_rowWeight="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:tag="8"
            android:text="8"
            android:textAlignment="center"
            android:textColor="@color/calc_bt_txt_cl"
            android:textSize="@dimen/cal_bt_text_size"
            app:backgroundTint="@color/calc_bt_bg_num_tint"
            app:cornerRadius="@dimen/cal_bt_rad" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/bt_cal_num_9"
            android:layout_row="2"
            android:layout_rowWeight="1"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:tag="9"
            android:text="9"
            android:textAlignment="center"
            android:textColor="@color/calc_bt_txt_cl"
            android:textSize="@dimen/cal_bt_text_size"
            app:backgroundTint="@color/calc_bt_bg_num_tint"
            app:cornerRadius="@dimen/cal_bt_rad" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/bt_cal_op_di"
            android:layout_row="2"
            android:layout_rowWeight="1"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:tag="/"
            android:text="/"
            android:textAlignment="center"
            android:textSize="@dimen/cal_bt_ops_size"
            app:backgroundTint="@color/calc_bt_bg_op_tint"
            app:cornerRadius="@dimen/cal_bt_rad" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/bt_cal_op_my"
            android:layout_row="3"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:tag="*"
            android:text="*"
            android:textAlignment="center"
            android:textSize="@dimen/cal_bt_ops_size"
            app:backgroundTint="@color/calc_bt_bg_op_tint"
            app:cornerRadius="@dimen/cal_bt_rad" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/bt_cal_num_0"
            android:layout_row="3"
            android:layout_rowWeight="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:tag="0"
            android:text="0"
            android:textAlignment="center"
            android:textColor="@color/calc_bt_txt_cl"
            android:textSize="@dimen/cal_bt_text_size"
            app:backgroundTint="@color/calc_bt_bg_num_tint"
            app:cornerRadius="@dimen/cal_bt_rad" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/bt_cal_op_bs"
            android:layout_row="3"
            android:layout_rowWeight="1"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:tag="bs"
            android:text="CL"
            android:textAlignment="center"
            android:textSize="@dimen/cal_bt_text_size"
            app:backgroundTint="@color/calc_bt_bg_op_tint"
            app:cornerRadius="@dimen/cal_bt_rad" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/bt_cal_op_rs"
            android:layout_row="3"
            android:layout_rowWeight="1"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:tag="="
            android:text="="
            android:textAlignment="center"
            android:textSize="@dimen/cal_bt_ops_size"
            app:backgroundTint="@color/calc_bt_bg_op_tint"
            app:cornerRadius="@dimen/cal_bt_rad" />



    </GridLayout>

    <LinearLayout
        android:id="@+id/ll_cal_display"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/gl_cal_ui"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="spread_inside">

        <TextView
            android:id="@+id/tv_cal_num_display"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="bottom|right"
            android:textAlignment="gravity"
            android:textColor="@color/black"
            android:textSize="@dimen/cal_tv_num_size" />

        <TextView
            android:id="@+id/tv_cal_results_display"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="bottom|right"
            android:textAlignment="gravity"
            android:textColor="@color/black"
            android:textSize="@dimen/cal_tv_res_size" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>